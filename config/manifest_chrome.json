{
  "manifest_version": 2,
  "name": "Epiboard",
  "short_name": "Epiboard",
  "description": "A new tab page extension with material design",
  "author": "Alexays",
  "version": "$version",
  "permissions": [
    "storage",
    "sessions",
    "browsingData",
    "downloads",
    "downloads.open",
    "system.cpu",
    "system.memory",
    "system.storage",
    "management",
    "tabs",
    "topSites",
    "bookmarks",
    "history",
    "geolocation",
    "https://trends.google.com/trends/hottrends/visualize/internal/data",
    "https://www.google.com/doodles/search",
    "https://intra.epitech.eu/",
    "https://nantes.campus-isefac.fr/bachelor/"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com/ https://www.gstatic.com/charts/; object-src 'self'",
  "optional_permissions": [
    "https://api.openweathermap.org/"
  ],
  "browser_action": {
    "default_title": "Epiboard"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
