{
  "manifest_version": 2,
  "name": "Epiboard - New Tab",
  "short_name": "Epiboard",
  "description": "A new tab page extension with material design",
  "author": "Alexays",
  "version": "$version",
  "icons": {
    "16": "static/img/icon16.png",
    "48": "static/img/icon48.png",
    "128": "static/img/icon128.png"
  },
  "permissions": [
    "storage",
    "sessions",
    "browsingData",
    "downloads",
    "downloads.open",
    "management",
    "tabs",
    "topSites",
    "geolocation",
    "identity",
    "https://trends.google.com/trends/hottrends/visualize/internal/data",
    "https://www.google.com/doodles/search"
  ],
  "optional_permissions": [
    "https://*/",
    "http://*/"
  ],
  "chrome_settings_overrides": {
    "homepage": "index.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "applications": {
    "gecko": {
      "id": "contact@arouillard.fr",
      "strict_min_version": "54.0"
    }
  }
}
